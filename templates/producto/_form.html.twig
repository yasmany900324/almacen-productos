{{ form_start(form) }}
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Nombre:</label>
        <div class="col-sm-10">
            {{ form_widget(form.nombre) }}
            <div class="form-error">
                {{ form_errors(form.nombre) }}
            </div>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">UPC:</label>
        <div class="col-sm-10">
            {{ form_widget(form.upc) }}
            <div class="form-error">
                {{ form_errors(form.upc) }}
            </div>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Cantidad:</label>
        <div class="col-sm-10">
            {{ form_widget(form.cantidad) }}
            <div class="form-error">
                {{ form_errors(form.cantidad) }}
            </div>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Precio de Costo:</label>
        <div class="col-sm-10">
            {{ form_widget(form.precioCosto) }}
            <div class="form-error">
                {{ form_errors(form.precioCosto) }}
            </div>
        </div>
    </div>



    {# //todo continue improving design #}

    

    {{ form_rest(form) }}
    <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
{{ form_end(form) }}
