        <div class="col-sm-10">
            {{ form_widget(form.locacionlong) }}
            <div class="form-error">
                {{ form_errors(form.locacionlong) }}
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    <button class="btn btn-primary" id="formAddAlmacenButtonSave">{{ button_label|default('Guardar') }}</button>
