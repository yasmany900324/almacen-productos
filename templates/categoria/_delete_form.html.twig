<form method="post" action="{{ path('categoria_delete', {'id': categorium.id}) }}" onsubmit="return confirm('Está seguro de eliminar esta categoría?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorium.id) }}">
    <button class="btn btn-danger" {% if button_id is defined %} id="{{ button_id }}" {% endif%}>Delete</button>
</form>
